@page "/study-cards"
@inject NavigationManager NavigationManager

<PageTitle>Study Cards Deck</PageTitle>

<div class="min-h-screen bg-gradient-to-br from-purple-400 via-pink-500 to-red-500 p-8">
    <div class="max-w-6xl mx-auto">
        <header class="text-center mb-8">
            <h1 class="text-4xl font-bold text-white mb-2">Your Study Cards</h1>
            <p class="text-xl text-white mb-4">Review and learn from your AI-generated study cards</p>
            <button @onclick="ToggleAllAnswers"
                class="bg-white text-purple-600 hover:bg-purple-100 font-bold py-2 px-4 rounded">
                @(_areAllAnswersVisible ? "Hide All Answers" : "Show All Answers")
            </button>
        </header>

        <div class="grid grid-cols-3 gap-6 h-[calc(100vh-16rem)] overflow-y-auto pr-4">
            @foreach (var card in _studyCards)
            {
                    <div class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col h-80">
                        <div class="p-6 flex-grow">
                            <h3 class="text-lg font-semibold mb-4">@card.Question</h3>
                        @if (card.IsAnswerVisible)
                        {
                                    <p class="text-gray-600">@card.Answer</p>
                        }
                        </div>
                        <div class="bg-gray-100 px-6 py-4 mt-auto">
                            <button @onclick="() => ToggleCardVisibility(card)"
                                class="text-purple-600 hover:text-purple-800 font-medium">
                            @(card.IsAnswerVisible ? "Hide Answer" : "Show Answer")
                            </button>
                        </div>
                    </div>
            }
        </div>

        <div class="mt-8 text-center">
            <button @onclick="NavigateToHome"
                class="bg-white text-purple-600 hover:bg-purple-100 font-bold py-2 px-4 rounded">
                Generate More Cards
            </button>
        </div>
    </div>
</div>

@code {
    private List<StudyCard> _studyCards = new List<StudyCard>();
    private bool _areAllAnswersVisible = true;

    protected override void OnInitialized()
    {
        _studyCards = new List<StudyCard>
{
new StudyCard { Question = "What is the capital of France?", Answer = "Paris", IsAnswerVisible = true },
new StudyCard { Question = "Who wrote 'Romeo and Juliet'?", Answer = "William Shakespeare", IsAnswerVisible = true },
new StudyCard { Question = "What is the chemical symbol for gold?", Answer = "Au", IsAnswerVisible = true },
new StudyCard { Question = "What is the largest planet in our solar system?", Answer = "Jupiter", IsAnswerVisible = true
},
new StudyCard { Question = "Who painted the Mona Lisa?", Answer = "Leonardo da Vinci", IsAnswerVisible = true },
new StudyCard { Question = "What is the square root of 144?", Answer = "12", IsAnswerVisible = true },
new StudyCard { Question = "What is the main ingredient in guacamole?", Answer = "Avocado", IsAnswerVisible = true },
new StudyCard { Question = "Who was the first president of the United States?", Answer = "George Washington",
IsAnswerVisible = true },
new StudyCard { Question = "What is the capital of Japan?", Answer = "Tokyo", IsAnswerVisible = true },
new StudyCard { Question = "What is the chemical formula for water?", Answer = "H2O", IsAnswerVisible = true },
new StudyCard { Question = "Who wrote '1984'?", Answer = "George Orwell", IsAnswerVisible = true },
new StudyCard { Question = "What is the largest ocean on Earth?", Answer = "Pacific Ocean", IsAnswerVisible = true }
};
    }

    private void ToggleCardVisibility(StudyCard card)
    {
        card.IsAnswerVisible = !card.IsAnswerVisible;
        UpdateGlobalVisibilityState();
    }

    private void ToggleAllAnswers()
    {
        _areAllAnswersVisible = !_areAllAnswersVisible;
        foreach (var card in _studyCards)
        {
            card.IsAnswerVisible = _areAllAnswersVisible;
        }
    }

    private void UpdateGlobalVisibilityState()
    {
        _areAllAnswersVisible = _studyCards.All(card => card.IsAnswerVisible);
    }

    private void NavigateToHome()
    {
        NavigationManager.NavigateTo("/");
    }

    public class StudyCard
    {
        public string Question { get; set; } = "";
        public string Answer { get; set; } = "";
        public bool IsAnswerVisible { get; set; } = true;
    }
}